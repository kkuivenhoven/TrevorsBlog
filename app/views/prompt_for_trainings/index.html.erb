<header class="container text-center my-5">
	<h1>PromptForTrainings#index</h1>
	<p>Find me in app/views/prompt_for_trainings/index.html.erb</p>
	<%= link_to 'New Prompt For Training', new_prompt_for_training_path, class: 'btn btn-primary' %>
</header>

<div class="post-content">
	<% @prompts.each do |prompt| %>
		<%= findPromptName(prompt.prompt_id) %> <br> 
		<%= prompt.prompt_text %><br>
		<%= link_to "Show", prompt_for_training_path(prompt.id) %><br><br>
		<%= link_to "Edit", edit_prompt_for_training_path(prompt.id) %><br><br>
	<% end %>
</div>
