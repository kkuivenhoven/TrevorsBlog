<style>
/* Post Content */
.post-content {
  background: #2A2D43; /* Darkened Blue-Gray */
  color: #E6E6FA; /* Soft Lavender */
  padding: 1.5rem;
  border-radius: 8px;
  font-size: 1.2rem;
  line-height: 1.8;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.15);
  width: 100%;
  max-width: 1300px;
  margin: 20px auto;
}

/* Post Images */
.post-image {
  width: 50%;
  max-width: 100%;
  height: auto;
  display: block;
  margin: 20px auto;
  border-radius: 8px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.15);
}

/* Back Link */
.back-link {
  display: inline-block;
  text-decoration: none;
  background-color: #B5838D; /* Warm Dusty Rose */
  color: #1B1F3B;
  padding: 10px 20px;
  border-radius: 5px;
  font-weight: bold;
  text-align: center;
  transition: background-color 0.3s ease;
  margin-bottom: 20px;
}

.back-link:hover {
  background-color: #6D6875; /* Deep Gray-Purple */
  text-decoration: none;
}

.back-link:focus {
  outline: none;
  box-shadow: 0 0 5px rgba(181, 131, 141, 0.5); /* Subtle focus outline */
}

/* Date Formatting */
.ordinal-suffix {
  font-size: 0.6em;
  position: relative;
  top: -0.15em; /* Subtle placement */
  vertical-align: top;
  opacity: 0.75; /* 75% opacity */
}

.ordinal {
  font-size: 0.45em;
  vertical-align: super;
}

.blog-sources {
  margin-top: 2rem;
  padding: 1rem;
  background: #2A2D43; /* Darkened Blue-Gray for depth */
  border-left: 4px solid #B5838D; /* Warm Dusty Rose accent */
  border-radius: 8px;
}

.blog-sources h3 {
  color: #B5838D; /* Warm Dusty Rose */
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.blog-sources ul {
  list-style-type: none;
  padding: 0;
}

.blog-sources li {
  margin-bottom: 0.5rem;
}

.blog-sources a {
  color: #9A8C98; /* Muted Mauve */
  text-decoration: none;
  transition: color 0.3s ease;
}

.blog-sources a:hover {
  color: #6D6875; /* Deep Gray-Purple */
  text-decoration: underline;
}
</style>


<header class="container text-center my-5">
	<h1 class="post-title">
		<%= @post["title"] %>
	</h1>
	<p class="lead">
		<% parsed_date = Date.parse(@post["date_published"]) %>
	    <% formatted_date = parsed_date.strftime("%B #{parsed_date.day}#{ordinal_suffix(parsed_date.day)}, %Y") %>
		<%= formatted_date.html_safe %>
    </p>
	<p class="lead" style="font-size: 14px; opacity: 0.75;">
		<%= @post["excerpt"] %>
    </p>
</header>

<div class="post-content">
	<% content = @post["content"] %>
	<% images = @post["images"] %>
	<% sources = @post["sources"] %>
	<% image_index = 0 %>

  <% content.split("<br>").each_with_index do |segment, index| %>
    <%# If the segment is "img-tag", insert an image %>
    <% if segment.strip == "img-tag" && image_index < images.length %>
      <img src="<%= asset_path(@post["file_name"] + "/" + images[image_index]) %>" alt="Fraud Image" class="post-image">
      <% image_index += 1 %>
    <% else %>
      <p style="text-indent: 20px;">
		<%= segment.strip %>
	  </p> <%# Otherwise, treat as text %>
    <% end %>
  <% end %>

<% if sources.present? %>
  <div class="blog-sources">
    <h3>Sources</h3>
    <ul>
      <% sources.each do |source| %>
        <li>
          <a href="<%= source %>" target="_blank" rel="noopener noreferrer"><%= source %></a>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

</div>

<center>
	<%= link_to 'Back to All Posts', posts_index_path, class: "back-link btn btn-primary" %>
</center>
